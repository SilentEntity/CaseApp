node('PyNode'){
    dir('/home/$REMOTE_USER'){
        stage('Git Checkout'){
            git branch: 'main', url: 'https://github.com/SilentEntity/CaseApp.git'
        }
        stage('Setting up Environment'){
            sh '''#!/bin/bash
            echo $PATH
            pip3 install virtualenv;
            virtualenv -p python3 cicd_env;
            source cicd_env/bin/activate;
            pip3 install -r requirements.txt;
            pip3 list'''
        }
        stage('BATS'){
            sh '''#!/bin/bash
            source cicd_env/bin/activate;
            pytest -v'''
        }
        stage('SetUp WSGI Server'){
            sh '''#!/bin/bash
            sudo << "$SERVER_PASSWORD" cp CaseApp/CaseAppWSGI.service /etc/systemd/system/
            sudo << "$SERVER_PASSWORD" systemctl start CaseAppWSGI.service
            sudo << "$SERVER_PASSWORD" systemctl enable CaseAppWSGI.service
            '''
        }
        stage('Disable FireWall'){
            sh '''#!/bin/bash
            sudo << "$SERVER_PASSWORD" ufw allow 9090
            '''
        }
    }
}
