node('PyNode'){
    dir('/home/$USER'){
        stage('Git Checkout'){
            git branch: 'main', url: 'https://github.com/SilentEntity/CaseApp.git'
        }
        stage('Setting up Environment'){
            sh '''#!/bin/bash
            echo $PATH
            pip3 install virtualenv;
            virtualenv -p python3 cicd_env;
            source cicd_env/bin/activate;
            pip3 install -r requirements.txt;
            pip3 list'''
        }
        stage('BATS'){
            sh '''#!/bin/bash
            source cicd_env/bin/activate;
            pytest -v'''
        }
        stage('SetUp WSGI Server'){
            sh '''#!/bin/bash
            sudo << "$SERVER_PASSWORD" cp CaseApp/CaseApp.service /etc/systemd/system/
            sudo << "$SERVER_PASSWORD" systemctl start CaseApp.service
            sudo << "$SERVER_PASSWORD" systemctl enable CaseApp.service
            '''
        }
        stage('Configure Ngnix Server'){
            sh '''#!/bin/bash
            sudo << "$SERVER_PASSWORD" cp CaseApp/CaseApp /etc/nginx/sites-available/
            sudo << "$SERVER_PASSWORD" ln -s /etc/nginx/sites-available/CaseApp /etc/nginx/sites-enabled
            '''
        }
    }
}